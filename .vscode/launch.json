    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Browser debug",
            "url": "http://localhost:3344",
            "pathMapping": {
                "/@fs": "/"
            },
            "preLaunchTask": "Build debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Unit test debug",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "test"
            ],
            "env": {
                "PATH": "${config:env.nodeDir}/bin:${env:PATH}"
            }
        }
    ]
}
