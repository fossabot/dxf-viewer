{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "baseUrl": "./",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src"
    ]
}
